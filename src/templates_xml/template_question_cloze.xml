{% for task in tasks %}
<!-- question: {{task.id|safe}} -->
  <question type="cloze">
    <name>
      <text>{{task.name|safe}}</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[ {{task.text|safe}} ]]></text>
    </questiontext>
    <generalfeedback format="html">
      <text></text>
    </generalfeedback>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <idnumber></idnumber>
  </question>
{% endfor %}
  


